<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".HomeActivity">


    <TextView
        android:id="@+id/notification_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notification Settings"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnmsgnotif"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Message Notifications"
        android:textSize="20dp"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/notification_text"/>

    <Button
        android:id="@+id/btnmute"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Mute"
        android:textSize="20dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/btnmsgnotif"/>

    <Button
        android:id="@+id/btnvibrate"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Vibrate"
        android:textSize="20dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/btnmute"/>

    <Button
        android:id="@+id/btnpopup"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Popup Notifications"
        android:textSize="20dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/btnvibrate"/>

    <ImageView
        android:id="@+id/homeicon"
        android:layout_width="92dp"
        android:layout_height="74dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="5dp"
        app:srcCompat="@drawable/icons8_home_24" />

    <ImageView
        android:id="@+id/mailbox"
        android:layout_width="92dp"
        android:layout_height="74dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="110dp"
        android:layout_marginBottom="1dp"
        app:srcCompat="@drawable/icons8_important_mail_24" />

    <ImageView
        android:id="@+id/settingsicon"
        android:layout_width="80dp"
        android:layout_height="74dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="99dp"
        android:layout_marginBottom="5dp"
        app:srcCompat="@drawable/icons8_settings_24" />

    <ImageView
        android:id="@+id/userimg"
        android:layout_width="112dp"
        android:layout_height="74dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="310dp"
        android:layout_marginTop="634dp"
        android:layout_marginEnd="5dp"
        app:srcCompat="@drawable/icons8_user_24" />

</RelativeLayout>
