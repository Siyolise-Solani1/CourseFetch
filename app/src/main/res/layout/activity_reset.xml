<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".ResetActivity">

    <TextView
        android:id="@+id/user_reset_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/pass_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:inputType="numberPassword"
        android:hint="Password"
        android:layout_below="@+id/user_reset_text"/>

    <EditText
        android:id="@+id/repass_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:inputType="numberPassword"
        android:hint="Confirm Password"
        android:layout_below="@+id/pass_reset"/>

    <Button
        android:id="@+id/btnConfPassd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONFIRM"
        android:textSize="20dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/repass_reset"/>



</RelativeLayout>